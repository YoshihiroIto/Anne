<StackPanel x:Class="Anne.Diff.DiffLinesCountView"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            Orientation="Horizontal"
            d:DesignHeight="300"
            d:DesignWidth="300"
            mc:Ignorable="d">
    <TextBlock Text="(" />
    <TextBlock Foreground="Green" Text="{Binding LinesAdded, Mode=OneTime}" />
    <TextBlock Text=", " />
    <TextBlock Foreground="Red" Text="{Binding LinesDeleted, Mode=OneTime}" />
    <TextBlock Text=")" />
</StackPanel>



<controls:TreeViewEx x:Class="Anne.Features.RepositoryOutlinerView"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:controls="clr-namespace:System.Windows.Controls;assembly=TreeViewEx"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:features="clr-namespace:Anne.Features"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     d:DesignHeight="300"
                     d:DesignWidth="300"
                     mc:Ignorable="d">

    <controls:TreeViewEx.ItemTemplate>
        <HierarchicalDataTemplate DataType="{x:Type features:ReposOutlinerRoot}" ItemsSource="{Binding Children, Mode=OneWay}">
            <TextBlock FontWeight="Bold" Text="{Binding Caption.Value, Mode=OneWay}" />
        </HierarchicalDataTemplate>
    </controls:TreeViewEx.ItemTemplate>
</controls:TreeViewEx>


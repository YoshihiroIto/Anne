<DockPanel x:Class="Anne.Features.FileDiffView"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           xmlns:converters="clr-namespace:Anne.Features.Converters"
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
           xmlns:features="clr-namespace:Anne.Features"
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
           d:DesignHeight="300"
           d:DesignWidth="300"
           mc:Ignorable="d">

    <DockPanel.Resources>
        <converters:PathStringToSyntaxHighlightingConverter x:Key="ToHighlighting" />
    </DockPanel.Resources>

    <features:FileDiffTextEditor DockPanel.Dock="Top"
                                 FontFamily="Consolas"
                                 FontSize="14"
                                 HorizontalScrollBarVisibility="Hidden"
                                 IsReadOnly="True"
                                 SyntaxHighlighting="{Binding Path,
                                                              Converter={StaticResource ToHighlighting},
                                                              Mode=OneTime}"
                                 Text="{Binding Diff,
                                                Mode=OneTime}"
                                 VerticalScrollBarVisibility="Auto"
                                 WordWrap="True" />
</DockPanel>

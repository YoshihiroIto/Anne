<Grid x:Class="Anne.Features.DoneCommitView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:control="clr-namespace:Anne.Foundation.Controls;assembly=Anne.Foundation"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:diff="clr-namespace:Anne.Diff"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      d:DesignHeight="600"
      d:DesignWidth="300"
      mc:Ignorable="d">

    <Grid.RowDefinitions>
        <RowDefinition Height="2*" />
        <RowDefinition Height="3*" />
        <RowDefinition Height="3*" />
    </Grid.RowDefinitions>

    <DockPanel Grid.Row="0" LastChildFill="True">
        <Grid DockPanel.Dock="Top">
            <Grid.Resources>
                <Style x:Key="CommitMetaCaptionStyle" TargetType="{x:Type TextBlock}">
                    <Setter Property="HorizontalAlignment" Value="Right" />
                    <Setter Property="Margin" Value="4,0" />
                    <Setter Property="FontWeight" Value="Bold" />
                </Style>
                <Style x:Key="CommitMetaValueStyle" TargetType="{x:Type TextBlock}">
                    <Setter Property="Margin" Value="4,0" />
                </Style>
            </Grid.Resources>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Row="0"
                    Grid.RowSpan="4"
                    Grid.Column="0"
                    Width="64"
                    Height="64"
                    Margin="8"
                    BorderBrush="LightGray"
                    BorderThickness="1"
                    SnapsToDevicePixels="True">
                <Image RenderOptions.BitmapScalingMode="Fant" Source="{Binding AutherImage, Mode=OneWay}" />
            </Border>

            <!--  Hash  -->
            <TextBlock Grid.Row="0"
                       Grid.Column="1"
                       Style="{StaticResource CommitMetaCaptionStyle}"
                       Text="Commit:" />
            <TextBlock Grid.Row="0"
                       Grid.Column="2"
                       Style="{StaticResource CommitMetaValueStyle}"
                       Text="{Binding Hash,
                                      Mode=OneTime}" />

            <!--  Parents  -->
            <TextBlock Grid.Row="1"
                       Grid.Column="1"
                       Style="{StaticResource CommitMetaCaptionStyle}"
                       Text="Parents:" />
            <TextBlock Grid.Row="1"
                       Grid.Column="2"
                       Style="{StaticResource CommitMetaValueStyle}"
                       Text="{Binding Parents,
                                      Mode=OneTime}" />

            <!--  Auther  -->
            <TextBlock Grid.Row="2"
                       Grid.Column="1"
                       Style="{StaticResource CommitMetaCaptionStyle}"
                       Text="Auther:" />
            <TextBlock Grid.Row="2"
                       Grid.Column="2"
                       Style="{StaticResource CommitMetaValueStyle}"
                       Text="{Binding Auther,
                                      Mode=OneTime}" />

            <!--  Date  -->
            <TextBlock Grid.Row="3"
                       Grid.Column="1"
                       Style="{StaticResource CommitMetaCaptionStyle}"
                       Text="Date:" />
            <TextBlock Grid.Row="3"
                       Grid.Column="2"
                       Style="{StaticResource CommitMetaValueStyle}"
                       Text="{Binding Date,
                                      Mode=OneTime}" />
        </Grid>

        <!--  メッセージ  -->
        <TextBox HorizontalScrollBarVisibility="Hidden"
        BorderBrush="{x:Null}"
        Background="{x:Null}"
                            IsReadOnly="True"
                            Text="{Binding Message,
                                           Mode=OneTime}"
                            VerticalScrollBarVisibility="Auto"
                             />
    </DockPanel>

    <!--  変更ファイル  -->

    <ListView Grid.Row="1"
              ItemsSource="{Binding FileDiffs,
                                    Mode=OneWay}"
              ScrollViewer.CanContentScroll="True"
              SelectedItem="{Binding SelectedFilePatch.Value}"
              SelectionMode="Single"
              VirtualizingPanel.IsVirtualizing="True"
              VirtualizingPanel.ScrollUnit="Pixel"
              VirtualizingPanel.VirtualizationMode="Recycling">
        <ListView.ItemsPanel>
            <ItemsPanelTemplate>
                <VirtualizingStackPanel CanVerticallyScroll="True" Orientation="Vertical" />
            </ItemsPanelTemplate>
        </ListView.ItemsPanel>
        <ListView.ItemTemplate>
            <DataTemplate>
                <!--  ReSharper disable once Xaml.BindingWithContextNotResolved  -->
                <TextBlock Text="{Binding Path, Mode=OneTime}" />
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>

    <diff:DiffView Grid.Row="2" DataContext="{Binding SelectedFilePatch.Value, Mode=OneWay}" />
</Grid>

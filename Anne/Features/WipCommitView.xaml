<Grid x:Class="Anne.Features.WipCommitView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:behaviors="clr-namespace:Livet.Behaviors;assembly=Livet2"
      xmlns:behaviours="clr-namespace:FunctionalFun.UI.Behaviours;assembly=Anne.Foundation"
      xmlns:controls="http://schemes.grabacr.net/winfx/2014/controls"
      xmlns:controls1="clr-namespace:Anne.Foundation.Controls;assembly=Anne.Foundation"
      xmlns:converters="clr-namespace:Anne.Foundation.Converters;assembly=Anne.Foundation"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:diff="clr-namespace:Anne.Diff"
      xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions"
      xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      d:DesignHeight="600"
      d:DesignWidth="300"
      mc:Ignorable="d">
    <Grid.Resources>
        <converters:BoolToVisibilityConverter x:Key="DiffLinesCountVisibility"
                                              False="Visible"
                                              True="Collapsed" />
        <converters:BoolToVisibilityConverter x:Key="DiscardButtonVisibility"
                                              False="Hidden"
                                              True="Visible" />
    </Grid.Resources>

    <Grid.RowDefinitions>
        <RowDefinition Height="2*" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="3*" />
        <RowDefinition Height="Auto" />
        <RowDefinition Height="3*" />
    </Grid.RowDefinitions>

    <DockPanel Grid.Row="0" LastChildFill="True">
        <Grid DockPanel.Dock="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <controls:PromptTextBox BorderThickness="1,1,1,0"
                                    IsTabStop="True"
                                    Prompt="Summry"
                                    SnapsToDevicePixels="True"
                                    Text="{Binding Summry,
                                                   UpdateSourceTrigger=PropertyChanged}" />

            <Label Grid.Column="1"
                   BorderBrush="{StaticResource BorderBrushKey}"
                   BorderThickness="0,1,1,0"
                   Content="{Binding SummryRemaining.Value,
                                     Mode=OneWay}"
                   Foreground="{Binding SummryRemainingBrush.Value,
                                        Mode=OneWay}"
                   SnapsToDevicePixels="True" />
        </Grid>

        <StackPanel DockPanel.Dock="Bottom">
            <Button Width="96"
                    Height="24"
                    Margin="0,0,0,8"
                    HorizontalAlignment="Left"
                    Command="{Binding CommitCommand,
                                      Mode=OneTime}"
                    Content="Commit"
                    IsTabStop="True"
                    SnapsToDevicePixels="True" />
            <CheckBox Margin="6,0,0,2"
                      IsChecked="{Binding IsAllSelected.Value}"
                      IsThreeState="True" />
        </StackPanel>

        <controls:PromptTextBox VerticalContentAlignment="Top"
                                AcceptsReturn="True"
                                IsTabStop="True"
                                Prompt="Description"
                                SnapsToDevicePixels="True"
                                Text="{Binding Description,
                                               UpdateSourceTrigger=PropertyChanged}"
                                TextWrapping="Wrap"
                                VerticalScrollBarVisibility="Auto" />
    </DockPanel>

    <GridSplitter Grid.Row="1"
                  Height="6"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Center" />

    <ListView Grid.Row="2"
              HorizontalContentAlignment="Stretch"
              AlternationCount="2"
              BorderBrush="LightGray"
              ItemsSource="{Binding WipFiles.Value,
                                    Mode=OneWay}"
              ScrollViewer.CanContentScroll="True"
              SelectionMode="Extended"
              VirtualizingPanel.IsVirtualizing="True"
              VirtualizingPanel.ScrollUnit="Pixel"
              VirtualizingPanel.VirtualizationMode="Recycling"
              behaviours:MultiSelectorBehaviours.SynchronizedSelectedItems="{Binding SelectedWipFiles}">
        <ListView.Template>
            <ControlTemplate TargetType="ItemsControl">
                <Border BorderBrush="LightGray"
                        BorderThickness="1"
                        SnapsToDevicePixels="True">
                    <ScrollViewer Background="White">
                        <ItemsPresenter />
                    </ScrollViewer>
                </Border>
            </ControlTemplate>
        </ListView.Template>
        <ListView.ItemsPanel>
            <ItemsPanelTemplate>
                <VirtualizingStackPanel CanVerticallyScroll="True" Orientation="Vertical" />
            </ItemsPanelTemplate>
        </ListView.ItemsPanel>
        <ListView.ItemTemplate>
            <DataTemplate>
                <DockPanel Background="Transparent" LastChildFill="False">
                    <!--  ReSharper disable Xaml.BindingWithContextNotResolved  -->
                    <CheckBox DockPanel.Dock="Left" IsChecked="{Binding IsInStaging.Value}" />

                    <controls1:FileStatusMark Width="14"
                                              Height="14"
                                              Margin="4,0,0,0"
                                              VerticalAlignment="Center"
                                              Status="{Binding Status,
                                                               Mode=OneTime}" />

                    <TextBlock Margin="4,0,0,0"
                               VerticalAlignment="Center"
                               DockPanel.Dock="Left"
                               Text="{Binding Path,
                                              Mode=OneTime}" />

                    <diff:DiffLinesCountView Margin="8,0,0,0"
                                             VerticalAlignment="Center"
                                             DockPanel.Dock="Left"
                                             Visibility="{Binding IsBinary,
                                                                  Mode=OneTime,
                                                                  Converter={StaticResource DiffLinesCountVisibility}}" />

                    <Button VerticalAlignment="Center"
                            Command="{Binding DiscardChangesCommand,
                                              Mode=OneTime}"
                            Content="Discard"
                            DockPanel.Dock="Right"
                            Visibility="{Binding DataContext.IsSelected.Value,
                                                 Converter={StaticResource DiscardButtonVisibility},
                                                 RelativeSource={RelativeSource FindAncestor,
                                                                                AncestorType={x:Type DockPanel}}}" />
                    <!--  ReSharper restore Xaml.BindingWithContextNotResolved  -->
                </DockPanel>
            </DataTemplate>
        </ListView.ItemTemplate>

        <i:Interaction.Triggers>
            <ei:KeyTrigger Key="Space">
                <behaviors:LivetCallMethodAction MethodName="ToggleStaging" MethodTarget="{Binding}" />
            </ei:KeyTrigger>
        </i:Interaction.Triggers>

        <ListView.ItemContainerStyle>
            <Style TargetType="ListViewItem">
                <EventSetter Event="KeyDown" Handler="ListViewItem_KeyDown" />
                <Setter Property="IsSelected" Value="{Binding IsSelected.Value}" />

                <Style.Triggers>
                    <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                        <Setter Property="Background" Value="#F8F8F8" />
                    </Trigger>
                </Style.Triggers>
            </Style>
        </ListView.ItemContainerStyle>

        <ListView.ContextMenu>
            <ContextMenu>
                <MenuItem Command="{Binding DiscardChangesCommand, Mode=OneTime}" Header="Discard changes" />
            </ContextMenu>
        </ListView.ContextMenu>
    </ListView>

    <GridSplitter Grid.Row="3"
                  Height="6"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Center" />

    <Border Grid.Row="4"
            Background="White"
            BorderBrush="LightGray"
            BorderThickness="1,0,1,1"
            SnapsToDevicePixels="True">
        <!--<diff:DiffFileViewList DataContext="{Binding SelectedWipFiles, Mode=OneWay}" />-->
        <diff:SingleOrMultiDiffFileView DataContext="{Binding DiffFileViewSource.Value, Mode=OneWay}" />
    </Border>
</Grid>

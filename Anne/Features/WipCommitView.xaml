<Grid x:Class="Anne.Features.WipCommitView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:controls="http://schemes.grabacr.net/winfx/2014/controls"
      xmlns:controls1="clr-namespace:Anne.Foundation.Controls;assembly=Anne.Foundation"
      xmlns:converters="clr-namespace:Anne.Features.Converters"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:diff="clr-namespace:Anne.Diff"
      xmlns:foundation="clr-namespace:Anne.Foundation;assembly=Anne.Foundation"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      d:DesignHeight="600"
      d:DesignWidth="300"
      mc:Ignorable="d">
    <Grid.Resources>
        <converters:BoolToVisibilityConverter x:Key="VisibilityConverter"
                                              False="Visible"
                                              True="Collapsed" />
    </Grid.Resources>

    <Grid.RowDefinitions>
        <RowDefinition Height="2*" />
        <RowDefinition Height="3*" />
        <RowDefinition Height="3*" />
    </Grid.RowDefinitions>

    <DockPanel Grid.Row="0" LastChildFill="True">
        <Grid DockPanel.Dock="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <controls:PromptTextBox BorderThickness="1,1,1,0"
                                    IsTabStop="True"
                                    Prompt="Summry"
                                    SnapsToDevicePixels="True"
                                    Text="{Binding Summry,
                                                   UpdateSourceTrigger=PropertyChanged}" />

            <Label Grid.Column="1"
                   BorderBrush="{StaticResource BorderBrushKey}"
                   BorderThickness="0,1,1,0"
                   Content="{Binding SummryRemaining.Value,
                                     Mode=OneWay}"
                   Foreground="{Binding SummryRemainingBrush.Value,
                                        Mode=OneWay}"
                   SnapsToDevicePixels="True" />
        </Grid>

        <StackPanel DockPanel.Dock="Bottom">
            <Button Width="96"
                    Height="24"
                    Margin="0,0,0,8"
                    HorizontalAlignment="Left"
                    Command="{Binding CommitCommand,
                                      Mode=OneTime}"
                    Content="Commit"
                    IsTabStop="True" />
        </StackPanel>

        <controls:PromptTextBox VerticalContentAlignment="Top"
                                AcceptsReturn="True"
                                IsTabStop="True"
                                Prompt="Description"
                                SnapsToDevicePixels="True"
                                Text="{Binding Description,
                                               UpdateSourceTrigger=PropertyChanged}"
                                TextWrapping="Wrap"
                                VerticalScrollBarVisibility="Auto" />
    </DockPanel>

    <ListView Grid.Row="1"
              BorderBrush="LightGray"
              ItemsSource="{Binding WipFiles.Value,
                                    Mode=OneWay}"
              ScrollViewer.CanContentScroll="True"
              SelectionMode="Extended"
              VirtualizingPanel.IsVirtualizing="True"
              VirtualizingPanel.ScrollUnit="Pixel"
              VirtualizingPanel.VirtualizationMode="Recycling"
              foundation:ListBoxBehaviour.SeletedItems="{Binding SelectedWipFiles,
                                                                 Mode=TwoWay}">
        <ItemsControl.Template>
            <ControlTemplate TargetType="ItemsControl">
                <Border BorderBrush="LightGray"
                        BorderThickness="1"
                        SnapsToDevicePixels="True">
                    <ScrollViewer Background="White">
                        <ItemsPresenter />
                    </ScrollViewer>
                </Border>
            </ControlTemplate>
        </ItemsControl.Template>

        <ListView.ItemsPanel>
            <ItemsPanelTemplate>
                <VirtualizingStackPanel CanVerticallyScroll="True" Orientation="Vertical" />
            </ItemsPanelTemplate>
        </ListView.ItemsPanel>
        <ListView.ItemTemplate>
            <DataTemplate>
                <StackPanel Orientation="Horizontal">
                    <!--  ReSharper disable Xaml.BindingWithContextNotResolved  -->
                    <CheckBox IsChecked="{Binding IsInStaging.Value}" />
                    <controls1:FileStatusMark Width="14"
                                              Height="14"
                                              Margin="4,0,0,0"
                                              Status="{Binding Status,
                                                               Mode=OneTime}" />
                    <TextBlock Margin="4,0,0,0" Text="{Binding Path, Mode=OneTime}" />
                    <StackPanel Margin="8,0,0,0"
                                Orientation="Horizontal"
                                Visibility="{Binding IsBinary,
                                                     Mode=OneTime,
                                                     Converter={StaticResource VisibilityConverter}}">
                        <TextBlock Text="(" />
                        <TextBlock Foreground="Green" Text="{Binding LinesAdded, Mode=OneTime}" />
                        <TextBlock Text=", " />
                        <TextBlock Foreground="Red" Text="{Binding LinesDeleted, Mode=OneTime}" />
                        <TextBlock Text=")" />
                    </StackPanel>
                    <!--  ReSharper restore Xaml.BindingWithContextNotResolved  -->
                </StackPanel>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>

    <Border Grid.Row="2"
            Background="White"
            BorderBrush="LightGray"
            BorderThickness="1,0,1,1"
            SnapsToDevicePixels="True">
        <diff:DiffView DataContext="{Binding SelectedWipFiles, Mode=OneWay}" />
    </Border>
</Grid>
